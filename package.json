{
  "name": "@root/kaenbyou",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "docs",
    "external/*",
    "external/*/external/*",
    "external/*/packages/*",
    "external/upstream/database/*",
    "external/upstream/utils/*",
    "packages/*"
  ],
  "scripts": {
    "cordis": "cordis",
    "clean": "node -r esbuild-register build/clean",
    "compile": "yakumo esbuild",
    "build": "yakumo build",
    "bump": "yakumo version",
    "dep": "yakumo upgrade",
    "pub": "yakumo publish",
    "lint": "eslint packages plugins --ext=ts --cache",
    "tsx": "tsx packages/cli/src/index.ts",
    "test": "yakumo mocha -r esbuild-register -r yml-register --exit",
    "test:json": "shx rm -rf coverage && c8 -r json yarn test",
    "test:html": "shx rm -rf coverage && c8 -r html yarn test",
    "test:text": "shx rm -rf coverage && c8 -r text yarn test"
  },
  "license": "MIT",
  "devDependencies": {
    "@koishijs/eslint-config": "^1.0.4",
    "@types/node": "^20.12.7",
    "@types/source-map-support": "^0.5.10",
    "cross-env": "^7.0.3",
    "esbuild": "^0.18.20",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.57.0",
    "minato": "^3.2.0",
    "source-map-support": "^0.5.21",
    "tsx": "^4.7.3",
    "typescript": "^5.5.0-dev.20240430",
    "yakumo": "^1.0.0-beta.13",
    "yakumo-esbuild": "^1.0.0-beta.5",
    "yakumo-tsc": "^1.0.0-beta.3",
    "yakumo-upgrade": "^0.3.6",
    "yakumo-version": "^0.3.4",
    "yml-register": "^1.2.5"
  }
}
